+            <div className="student-subtitle">Theo dõi trạng thái đơn hàng học tập.</div>
+          </div>
+          <div className="student-control-group">
+            <select className="student-btn" value={status} onChange={(e) => setStatus(e.target.value as OrderStatus | "ALL")}>
+              <option value="ALL">ALL</option>
+              <option value="PENDING">PENDING</option>
+              <option value="PAID">PAID</option>
+              <option value="CANCELLED">CANCELLED</option>
+            </select>
+            <button type="button" className="student-btn student-btn-ghost" onClick={() => void load()}>Reload</button>
+          </div>
+        </div>
+
+        {loading && <div className="student-alert student-alert-info">Đang tải...</div>}
+        {err && <div className="student-alert student-alert-danger">{err}</div>}
+
+        <div className="student-grid">
+          {filtered.map((o) => (
+            <div className="student-card" key={o.id}>
+              <div className="student-order-row">
+                <div>
+                  <div className="student-card-title">{o.code}</div>
+                  <div className="student-mini">{new Date(o.createdAt).toLocaleString("vi-VN")}</div>
+                </div>
+                <span className={`student-badge ${o.status === "PAID" ? "student-badge-active" : o.status === "PENDING" ? "student-badge-pending" : "student-badge-cancelled"}`}>
+                  {o.status}
+                </span>
+              </div>
+              <div className="student-mini">Tổng: <b>{fmtVND(o.total)}</b></div>
+              <div className="student-items">
+                {o.items.map((it) => <div key={it.id}>• {it.courseTitle} — {fmtVND(it.price)}</div>)}
+              </div>
+            </div>
+          ))}
+        </div>
+      </div>
+    </div>
+  );
+}
