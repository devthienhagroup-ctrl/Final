+import { useEffect, useMemo, useState } from "react";
+import { useNavigate } from "react-router-dom";
+import { ordersApi, type MyOrder, type OrderStatus } from "../../api/orders.api";
+import "./StudentCoursesTheme.css";
+
+function fmtVND(v: number) {
+  return `${v.toLocaleString("vi-VN")}đ`;
+}
+
+export function StudentMyOrdersPage() {
+  const nav = useNavigate();
+  const [items, setItems] = useState<MyOrder[]>([]);
+  const [loading, setLoading] = useState(true);
+  const [err, setErr] = useState<string | null>(null);
+  const [status, setStatus] = useState<OrderStatus | "ALL">("ALL");
+
+  async function load() {
+    setLoading(true);
+    setErr(null);
+    try {
+      const data = await ordersApi.myOrders();
+      setItems([...data].sort((a, b) => b.id - a.id));
+    } catch (e) {
+      setErr(e instanceof Error ? e.message : "Load orders failed");
+      setItems([]);
+    } finally {
+      setLoading(false);
+    }
+  }
+
+  useEffect(() => {
+    void load();
+  }, []);
+
+  const filtered = useMemo(() => {
+    if (status === "ALL") return items;
+    return items.filter((o) => o.status === status);
+  }, [items, status]);
+
+  return (
+    <div className="student-page">
+      <div className="student-shell">
+        <div className="student-menu">
+          <button type="button" className="student-btn" onClick={() => nav("/student")}>Portal</button>
