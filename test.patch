+    if (!lesson) return this.lessons.findOne({ ...user, role: 'ADMIN' }, id, lang)
+    await this.courses.assertCreator(lesson.courseId, user.sub)
+    return this.lessons.findOne({ ...user, role: 'ADMIN' }, id, lang)
+  }
