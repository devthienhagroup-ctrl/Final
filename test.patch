+export type HttpMethod = "GET" | "POST" | "PUT" | "PATCH" | "DELETE";
+
+export class ApiError extends Error {
+  status: number;
+  data?: unknown;
+
+  constructor(message: string, status: number, data?: unknown) {
+    super(message);
+    this.name = "ApiError";
+    this.status = status;
+    this.data = data;
+  }
+}
+
+const ACCESS_TOKEN_KEY = "aya_admin_token";
+
+function getBaseUrl() {
+  const viteUrl = (import.meta as ImportMeta & { env?: Record<string, string> }).env?.VITE_API_URL;
+  return (viteUrl || "http://localhost:8090").replace(/\/+$/, "");
+}
+
+export function getAccessToken() {
+  try {
+    return localStorage.getItem(ACCESS_TOKEN_KEY) || "";
+  } catch {
+    return "";
+  }
+}
+
+function isJsonResponse(res: Response) {
+  const ct = res.headers.get("content-type") || "";
+  return ct.includes("application/json");
+}
+
+async function parseBody(res: Response) {
+  if (res.status === 204) return null;
+  if (isJsonResponse(res)) {
+    try {
+      return await res.json();
+    } catch {
+      return null;
+    }
+  }
+
+  try {
+    return await res.text();
+  } catch {
+    return null;
+  }
+}
+
+function normalizeErrorMessage(data: unknown, fallback: string) {
+  if (!data) return fallback;
+  if (typeof data === "string") return data;
+  if (typeof data === "object" && data !== null) {
+    const message = (data as { message?: unknown }).message;
+    if (typeof message === "string") return message;
+    if (Array.isArray(message) && message.length) return String(message[0]);
+  }
+  return fallback;
+}
+
+export async function request<T>(
+  path: string,
+  options?: {
+    method?: HttpMethod;
+    body?: unknown;
+    auth?: boolean;
+    headers?: Record<string, string>;
+  }
+): Promise<T> {
+  const baseUrl = getBaseUrl();
+  const url = path.startsWith("http") ? path : `${baseUrl}${path.startsWith("/") ? "" : "/"}${path}`;
+
+  const method = options?.method ?? "GET";
+  const auth = options?.auth ?? true;
+  const headers: Record<string, string> = { ...(options?.headers ?? {}) };
+
+  const body = options?.body;
+  if (body !== undefined && body !== null) {
+    headers["Content-Type"] = headers["Content-Type"] || "application/json";
+  }
+
+  if (auth) {
+    const token = getAccessToken();
+    if (token) headers.Authorization = `Bearer ${token}`;
+  }
+
+  const res = await fetch(url, {
+    method,
+    headers,
+    body: body === undefined || body === null ? undefined : JSON.stringify(body),
+  });
+
+  const data = await parseBody(res);
+  if (!res.ok) {
+    throw new ApiError(normalizeErrorMessage(data, `HTTP ${res.status}`), res.status, data);
+  }
+
+  return data as T;
+}
+
+export function get<T>(path: string, options?: Omit<Parameters<typeof request<T>>[1], "method" | "body">) {
+  return request<T>(path, { ...options, method: "GET" });
+}
+
+export function post<T>(
+  path: string,
+  body?: unknown,
+  options?: Omit<Parameters<typeof request<T>>[1], "method" | "body">
+) {
+  return request<T>(path, { ...options, method: "POST", body });
+}
