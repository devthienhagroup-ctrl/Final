+import { Injectable } from '@nestjs/common'
+import { PrismaService } from '../prisma/prisma.service'
+
+export type AuditLogListQuery = {
+  page: number
+  limit: number
+  tableName?: string
+  action?: string
+  role?: string
+  q?: string
+}
+
+@Injectable()
+export class AuditLogsService {
+  constructor(private readonly prisma: PrismaService) {}
+
+  async list(query: AuditLogListQuery) {
+    const page = Math.max(1, Number(query.page || 1))
+    const limit = Math.min(100, Math.max(1, Number(query.limit || 20)))
+    const offset = (page - 1) * limit
+
+    const where: string[] = ['1=1']
+    const params: any[] = []
+
+    if (query.tableName) {
+      where.push('table_name = ?')
+      params.push(query.tableName)
+    }
+    if (query.action) {
+      where.push('action = ?')
+      params.push(query.action)
+    }
+    if (query.role) {
+      where.push('role = ?')
+      params.push(query.role)
+    }
+    if (query.q) {
+      where.push('(email LIKE ? OR actor_name LIKE ? OR endpoint LIKE ? OR ip_address LIKE ?)')
+      const search = `%${query.q}%`
+      params.push(search, search, search, search)
+    }
+
+    const whereSql = where.join(' AND ')
+
+    const items = await this.prisma.$queryRawUnsafe<any[]>(
+      `
+      SELECT
+        id,
+        user_id AS userId,
+        email,
+        actor_name AS actorName,
+        role,
+        ip_address AS ipAddress,
+        method,
+        endpoint,
+        table_name AS tableName,
+        action,
+        query_payload AS queryPayload,
+        created_at AS createdAt
+      FROM audit_logs
+      WHERE ${whereSql}
+      ORDER BY created_at DESC
+      LIMIT ? OFFSET ?
+      `,
+      ...params,
+      limit,
+      offset,
+    )
+
+    const countRows = await this.prisma.$queryRawUnsafe<any[]>(
+      `SELECT COUNT(*) AS total FROM audit_logs WHERE ${whereSql}`,
+      ...params,
+    )
+
+    return {
+      page,
+      limit,
+      total: Number(countRows?.[0]?.total || 0),
+      items,
+    }
+  }
+}
